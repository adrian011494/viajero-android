<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="4dp"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tripIda"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
                android:tint="@color/colorAccent"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:visibility="visible"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tripBack"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
                android:tint="@color/red"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:rotation="180"
                android:visibility="gone"
        />

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginStart="4dp"
        >


            <LinearLayout
                    android:id="@+id/timeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/roboto_regular"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorAccent"
                        android:text="600$"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/roboto_light"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:textColor="@color/subTextColor"
                        tools:text="4 horas"/>

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/clima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/roboto_light"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:tint="@color/subTextColor"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_ac_unit_black_24dp"
                />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/infoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/timeView"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/timeView">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/roboto_regular"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@android:color/black"
                        android:ellipsize="end"
                        tools:text="Habana"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/dateStart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/roboto_regular"
                            android:textSize="14sp"
                            app:textAllCaps="true"
                            android:textColor="@android:color/black"
                            tools:text="12:00 am"/>

                    <androidx.appcompat.widget.AppCompatTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/roboto_light"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:textAllCaps="true"
                            android:textColor="@color/subTextColor"
                            android:layout_marginRight="4dp"
                            android:layout_marginStart="4dp"
                            android:text=">"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:layout_marginEnd="4dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/dateEnd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/roboto_light"
                            android:textSize="14sp"
                            app:textAllCaps="true"
                            android:textColor="@color/subTextColor"
                            tools:text="12:00 am"/>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:textColor="@color/descText"
                        tools:text="@string/via"/>


            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>