<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        app:cardElevation="4dp"
        app:contentPadding="16dp"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tripIda"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
                android:tint="@color/colorAccent"
                android:layout_alignParentTop="true"
                android:visibility="visible"
        />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tripBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
                android:tint="@color/colorPrimary"
                android:layout_alignParentTop="true"
                android:rotation="180"
                android:visibility="gone"
        />

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp">

            <LinearLayout
                    android:id="@+id/timeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorAccent"
                        tools:text="600$"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:drawableEnd="@drawable/ic_airline_seat_recline_extra_black_24dp"

                        android:textColor="@color/subTextColor"
                        tools:text="@string/capacidad"/>

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/clima"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        app:fontFamily="@font/roboto_light"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:tint="@color/descText"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_ac_unit_black_24dp"
                />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/infoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toStartOf="@id/timeView">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/roboto_regular"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:ellipsize="end"
                        android:lines="1"
                        tools:text="Habana Habana Habana Habana Habana "/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/dateStart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/roboto_regular"
                            android:textSize="14sp"
                            app:textAllCaps="true"
                            android:lines="1"
                            android:textColor="@android:color/black"
                            tools:text="12:00 am"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/roboto_light"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:textAllCaps="true"
                            android:textColor="@color/subTextColor"
                            android:layout_marginRight="4dp"
                            android:layout_marginStart="4dp"
                            android:text=">"
                            android:lines="1"
                            android:visibility="gone"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:layout_marginEnd="4dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/dateEnd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/roboto_light"
                            android:textSize="14sp"
                            app:textAllCaps="true"
                            android:lines="1"
                            android:visibility="gone"
                            android:textColor="@color/subTextColor"
                            tools:text="12:00 am"/>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:textColor="@color/descText"
                        tools:text="@string/via"/>


            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>