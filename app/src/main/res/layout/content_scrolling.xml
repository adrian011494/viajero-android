<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/origin_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:contentPaddingTop="24dp"
                app:contentPaddingBottom="34dp"
                app:contentPaddingLeft="16dp"
                app:contentPaddingRight="16dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
        >

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
            >

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/origen">


                    <jrizani.jrspinner.JRSpinner
                            android:id="@+id/origin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:jrs_title="@string/origen"
                            app:fontFamily="@font/roboto_regular"
                            android:textSize="12sp"
                            app:jrs_icon_tint="@color/colorPrimary"/>

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/destiny">


                    <jrizani.jrspinner.JRSpinner
                            android:id="@+id/destiny"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:jrs_title="@string/destiny"
                            app:fontFamily="@font/roboto_regular"
                            android:textSize="12sp"
                            app:jrs_icon_tint="@color/colorPrimary"/>

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/selectDateInput"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fecha_ida">


                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/selectDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            app:fontFamily="@font/roboto_regular"
                            android:textSize="12sp"
                            android:layout_marginTop="16dp"
                            android:focusableInTouchMode="false"
                            android:editable="false"
                    />
                </com.google.android.material.textfield.TextInputLayout>

                <!--Original
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/selectDateInputBack"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fecha_regreso">


                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/selectDateBack"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            app:fontFamily="@font/roboto_regular"
                            android:textSize="12sp"
                            android:layout_marginTop="16dp"
                            android:editable="false"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                -->

                <!--Edgar-->
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                >

                    <!--Edgar En layout_marginTop habia un 16-->
                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/selectDateInputBack"
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/fecha_regreso">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/selectDateBack"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="4dp"
                                app:fontFamily="@font/roboto_regular"
                                android:textSize="12sp"
                                android:layout_marginTop="16dp"
                                android:focusableInTouchMode="false"
                                android:editable="false"

                        />


                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/actionClearDateInputBack"
                            android:layout_width="30dp"
                            android:layout_height="30dp"

                            android:layout_alignBottom="@id/selectDateInputBack"
                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_close"
                            android:layout_marginBottom="4dp"
                            android:padding="6dp"
                            android:scaleType="fitXY"
                            android:tint="@color/red"
                            android:layout_alignParentRight="true"/>


                </RelativeLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.button.MaterialButton
                android:id="@+id/actionSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeColor="@color/colorPrimary"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/white"
                app:fontFamily="@font/roboto_medium"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:text="@string/buscar"
                android:layout_marginTop="24dp"
                android:enabled="false"
        />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>